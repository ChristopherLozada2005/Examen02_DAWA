<%- include('partials/header', { title: 'Registro' }) %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="auth-card">
        <div class="card-header">
          <h3 class="text-center mb-0"><i class="bi bi-person-plus"></i> Registro de Usuario</h3>
        </div>
        <div class="card-body">
          <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger">
              <i class="bi bi-exclamation-triangle"></i> <%= error %>
            </div>
          <% } %>
          
          <form action="/register" method="POST">
            <div class="mb-3">
              <label for="nombre" class="form-label"><i class="bi bi-person"></i> Nombre</label>
              <input type="text" class="form-control" id="nombre" name="nombre" required>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label"><i class="bi bi-envelope"></i> Email</label>
              <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label"><i class="bi bi-key"></i> Contraseña</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-person-check"></i> Registrarse
              </button>
            </div>
          </form>
          <div class="mt-4 text-center">
            <p>¿Ya tienes una cuenta? <a href="/login" class="text-primary">Inicia sesión aquí</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
